.side
  .side__header
    .side__header__box
      %p.side__header__box__left
        = current_user.name
      %ul.side__header__box__right
        %li.side__header__box__icon
          = link_to new_group_path do 
            = icon('fas', 'edit')
        %li.side__header__box__icon
          = link_to edit_user_path(current_user) do 
            = icon('fas', 'cog')
        
  .side__group
    - current_user.groups.each do |group|
      .side__group__box
        = link_to '#' do
          .side__group__box__name
            = group.name
          .side__group__box__message
            まだメッセージがありません



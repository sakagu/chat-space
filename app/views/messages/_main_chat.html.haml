.main
  .main__header
    .main__header__left-box
      .main__header__left-box__name
        = @group.name
      %p.main__header__left-box__member
        Member:
        - @group.users.each do |user|
          = user.name
    .main__header__right-box
      = link_to "Edit", "/groups/#{@group.id}/edit", class: "main__header__right-box__edit"
  .main__chat
    = render @messages

  .main__form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'tye a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image',class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Sent', class: 'submit-btn'
